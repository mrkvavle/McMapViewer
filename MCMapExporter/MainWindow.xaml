<Window x:Class="MCMapExporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MC Map Exporter" Height="542" Width="894">
	<Grid>
		<ListBox x:Name="MapsList"  HorizontalAlignment="Left" Height="432" Margin="10,59,0,0" VerticalAlignment="Top" Width="209" FontSize="14" Foreground="#FF66ACD4" FontWeight="Bold">
		</ListBox>
		<Label Content="MC Map Exporter" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="44" Width="209" FontSize="24" FontWeight="Bold" Foreground="#FF646464" Background="White"/>
		<Button Content="Export Map" HorizontalAlignment="Left" Margin="232,59,0,0" VerticalAlignment="Top" Width="120" Height="32" FontWeight="Bold" Click="ExportButton_Click"/>
		<Label Content="Status" HorizontalAlignment="Left" Margin="232,107,0,0" VerticalAlignment="Top" Width="120" FontSize="16" Foreground="#FF646464" FontWeight="Bold"/>
		<TextBox x:Name="StatusBox" HorizontalAlignment="Left" Height="348" Margin="232,143,10,10" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="635" IsEnabled="False" Foreground="Red"/>
	</Grid>
</Window>
