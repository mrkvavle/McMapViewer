<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="MCMapViewer" />
	<title>@ViewBag.Title</title>

	@Styles.Render("~/Content/css")
	@Styles.Render("~/Content/3dscene")

	<style type="text/css">
		#gui {
			position: absolute;
			top: 80px;
			left: 10px;
		}
	</style>

	@Html.Partial("_glslShaders")
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Minecraft Map Viewer", "Index", "Home", null, new
		   {
			   @class = "navbar-brand"
		   })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Map Viewer", "Index", "Home")</li>
					@*<li>@Html.ActionLink("About", "About", "Home")</li>
						<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Maps<span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu" id="mapList"></ul>
					</li>
				</ul>
			</div>
		</div>
	</div>
	@*<div class="container body-content">*@
	<div class="">
		<div id="container">
		</div>

		@RenderBody()
		<div id="stats" style="margin-left: 25px;"></div>
	</div>




	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/3d")
	@Scripts.Render("~/bundles/mapViewer")

	<script>
		$(function () {
			window.mapViewer = new MapViewer();
			window.mapViewer.sceneLoaded = function () {
				@RenderSection("sceneLoaded",required:false)
			};
		});

	</script>

	@RenderSection("scripts", required: false)
</body>
</html>
